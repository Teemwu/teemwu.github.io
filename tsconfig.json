{
	"compilerOptions": {
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"types": [
			"node",
			"vite/client",
			"vitepress"
		]
	},
	"include": [
		"docs/.vitepress/**/*.ts",
		"docs/.vitepress/**/*.d.ts",
		"docs/.vitepress/**/*.vue",
		"build/*.mjs",
		"lib/*.mjs"
	]
}